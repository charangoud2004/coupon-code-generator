<%- include('../layouts/boilerplate') %>

<body class="d-flex flex-column min-vh-100">
  <!-- Coupon Navbar (Main Navigation) -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Coupon</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/login">Coupon Admin</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Admin Panel Navbar (Below Coupon Navbar) -->
  <nav
    class="navbar navbar-dark bg-dark fixed-top"
    style="margin-top: 56px; z-index: 1030"
  >
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Admin Panel</a>
    </div>
  </nav>

  <!-- Add spacing below navbars to prevent content overlap -->
  <div class="mt-5"></div>

  <!-- Login Form Container -->
  <div class="d-flex align-items-center justify-content-center flex-grow-1">
    <div
      class="card shadow-lg p-4"
      style="max-width: 400px; width: 100%; animation: fadeIn 0.8s ease-in-out"
    >
      <h1 class="text-center mb-4">Admin Login</h1>
      <form action="/admin/login" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username:</label>
          <input
            type="text"
            class="form-control animate-input"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            class="form-control animate-input"
            id="password"
            name="password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary w-100 animate-btn">
          Login
        </button>
      </form>
    </div>
  </div>

  <style>
    /* Smooth fade-in animation for the login card */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Input field hover and focus animations */
    .animate-input {
      transition: all 0.3s ease-in-out;
    }
    .animate-input:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 8px rgba(13, 110, 253, 0.4);
    }

    /* Button hover effect */
    .animate-btn {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s;
    }
    .animate-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
  </style>
</body>
